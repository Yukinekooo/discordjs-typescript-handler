{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@client": ["./src/index"],
            "@/*": ["./src/*"],
            "@handlers": ["./src/extensions/handlers"],
            "@config": ["./config.json"]
        }
    },
    "exclude": ["dist", "node_modules", "tests"]
}